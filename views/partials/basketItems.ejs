<% if (basket.length === 0) { %>
  <li class="list-group-item text-muted">Basket is empty</li>
<% } else { %>
  <% basket.forEach(item => { %>
    <li
      class="list-group-item p-0 d-flex align-items-center border-0 mb-2"
      style="
        height: 80px;
        position: relative;
        background: url('<%= item.imageUrl %>') center center / cover no-repeat;
        border-radius: 0.5rem;
        overflow: hidden;
        color: white;
        backdrop-filter: blur(4px);
        -webkit-backdrop-filter: blur(4px);
      "
    >
      <div
        style="
          background: rgba(0, 0, 0, 0.65);
          backdrop-filter: blur(4px);
          -webkit-backdrop-filter: blur(4px);
          width: 100%;
          height: 100%;
          display: flex;
          flex-direction: row;
          justify-content: space-between;
          align-items: center;
          padding: 0.5rem 1rem;
          border-radius: 0.5rem;
        "
      >
        <div>
          <div class="fw-bold"><%= item.name %></div>
          <small>Qty: <%= item.quantity %> â€¢ <%= item.total %> Fizzles</small>
        </div>
        <div class="d-flex align-items-center gap-1">
          <!-- Could optionally re-add +/- buttons -->
        </div>
      </div>
    </li>
  <% }) %>
<% } %>
