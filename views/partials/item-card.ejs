<div class="col-md-4 mb-3">
  <div class="card h-100">
    <a href="/items/<%= item.id %>" class="text-decoration-none text-dark">
      <div class="card-img-wrapper">
        <img
          src="<%= item.imageUrl %>"
          class="card-img-top"
          alt="<%= item.name %>"
        />
      </div>
    </a>
    <div class="card-body">
      <h5><%= item.name %></h5>
      <p><%= item.description %></p>
      <p>
        <strong>Price:</strong>
        <%= item.price%>
        Fizzles
      </p>
      <div class="d-flex justify-content-between align-items-center">

        <form class="add-to-basket-form" data-item-id="<%= item.id %>">
          <input type="hidden" name="quantity" value="1" />
          <button type="submit" class="btn btn-success">Add to Basket</button>
        </form>

        <% if (user && user.role !== "guest") { %>
          <button
            class="btn btn-outline-secondary favorite-toggle"
            data-item-id="<%= item.id %>"
            title="Toggle Favorite"
          >
            <i
              class="<%= item.isFavorite ? 'fas fa-star' : 'far fa-star' %> text-warning"
            ></i>
          </button>
        <% } %>

        
      </div>
    </div>
  </div>
</div>
