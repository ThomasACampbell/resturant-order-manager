<% const messageTypes = ['error', 'success', 'info']; %>
<% messageTypes.forEach(type => { %> <% if (locals[type + 'Message'] &&
locals[type + 'Message'].length > 0) { %>
<!-- Bootstrap Alert for different message types -->
<aside
  class="alert alert-<%= type === 'error' ? 'danger' : type %> alert-dismissible fade show"
  role="alert"
>
  <%= locals[type + 'Message'] %>
  <!-- Button to close the alert -->
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</aside>
<% } %>
<% }); %>
